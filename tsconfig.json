{
  "compilerOptions": {
    "target": "es2017",                     
    "module": "ESNext",                     
    "moduleResolution": "node",
    "declaration": true,                      
    "outDir": "./build",                    
    "removeComments": true,                 
    "esModuleInterop": true,                
    "experimentalDecorators": true,          
    "emitDecoratorMetadata": true,           
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__/**/*"] 
}
